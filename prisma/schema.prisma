generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  clerkid   String    @unique 
}

model suppliers {
  id        Int      @id @default(autoincrement())
  clerkId   String   
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  password  String?
  cities    cities[]
  tasks     tasks[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}


model tasks {
  id          Int       @id @default(autoincrement()) 
  address     String
  description String
  city        String
  url         String?
  status      Status    @default(PENDING)
  date        DateTime?
  createdAt   DateTime  @default(now())
  supplierId  Int
  supplier    suppliers @relation(fields: [supplierId], references: [id], onDelete: Cascade)
}

model cities {
  id        Int    @id @default(autoincrement())
  city      String
  supplierId Int
  supplier  suppliers @relation(fields: [supplierId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  COMPLETED
  REJECTED
}
